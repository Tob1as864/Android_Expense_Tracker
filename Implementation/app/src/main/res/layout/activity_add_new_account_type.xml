<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddNewAccountTypeActivity"
    android:padding="16dp" >

    <TextView
        android:id="@+id/activityaddnewaccounttype_textview_accounttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activityaddnewaccounttype_edittext_enteredaccounttype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="Enter account type"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityaddnewaccounttype_textview_accounttype" />

    <Button
        android:id="@+id/activityaddnewaccounttype_button_addaccounttype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add account type"
        android:onClick="addNewAccountType"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>